#!/bin/bash

set -e

PROJECT_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
VENV_DIR="$PROJECT_ROOT/venv"
PY311_BIN="/opt/homebrew/bin/python3.11"
PYTHON="$VENV_DIR/bin/python"

echo "ðŸ§ª Starting Hyperdirmic in dev mode using Python 3.11..."

# Create new venv if missing
if [ ! -d "$VENV_DIR" ]; then
  echo "ðŸ“¦ Creating virtualenv with Python 3.11..."
  "$PY311_BIN" -m venv "$VENV_DIR"
fi

# Activate venv
source "$VENV_DIR/bin/activate"

# Install deps
echo "ðŸ“¦ Installing dependencies..."
pip install --upgrade pip > /dev/null
pip install -r "$PROJECT_ROOT/requirements.txt" > /dev/null

# Run app
echo "ðŸš€ Launching Hyperdirmic in dev mode..."
$PYTHON "$PROJECT_ROOT/src/organizer.py"
