#!/bin/bash
set -e

APP_NAME="Hyperdirmic"
DIST_DIR="dist"
APP_PATH="$DIST_DIR/$APP_NAME.app"
ZIP_NAME="$APP_NAME.zip"
ZIP_PATH="$DIST_DIR/$ZIP_NAME"

# Ensure build exists
if [ ! -d "$APP_PATH" ]; then
  echo "âš™ï¸  No .app found â€” running bin/build first..."
  ./bin/build
fi

echo "ğŸ“¦ Packaging $APP_NAME..."

# Clean existing zip if any
rm -f "$ZIP_PATH"

# Zip the .app bundle
echo "ğŸ—œï¸  Creating ZIP archive..."
cd "$DIST_DIR"
zip -r "$ZIP_NAME" "$APP_NAME.app" > /dev/null
cd ..

# Generate SHA256
echo "ğŸ” SHA256 checksum:"
shasum -a 256 "$ZIP_PATH"

echo "âœ… Package complete: $ZIP_PATH"
