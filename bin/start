#!/bin/bash

APP_PATH="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)/dist/Hyperdirmic.app"
BINARY_PATH="$APP_PATH/Contents/MacOS/Hyperdirmic"

if [ ! -d "$APP_PATH" ]; then
  echo "âŒ Hyperdirmic.app not found in dist/"
  echo "ğŸ’¡ Try running ./bin/build first."
  exit 1
fi

if [[ "$1" == "--verbose" ]]; then
  echo "ğŸš€ Launching Hyperdirmic in verbose mode..."
  exec "$BINARY_PATH"
else
  echo "ğŸš€ Launching Hyperdirmic silently..."
  open "$APP_PATH"
fi
